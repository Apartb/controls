from machine import Pin
import time

led = Pin(18, Pin.OUT)
pi_input = Pin(13, Pin.IN, Pin.PULL_DOWN)

def on_input_change(pin):
    global led
    if pin.value():
        print("Received")
        led.on()
    else:
        led.off()

pi_input.irq(trigger=Pin.IRQ_RISING | Pin.IRQ_FALLING, handler=on_input_change)

while True:
    time.sleep_ms(100)
